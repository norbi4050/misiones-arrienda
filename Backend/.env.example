# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
# GUARD: Control de acceso a /comunidad para inmobiliarias
# false (recomendado): Hard redirect 307 a /mi-empresa (inmobiliarias no ven /comunidad)
# true: Soft-guard - Muestra EmptyState explicativo (inmobiliarias "ven" la página pero bloqueada)
NEXT_PUBLIC_FEATURE_COMMUNITY_SOFT_GUARD=false

# Debug Endpoints (SOLO DESARROLLO)
# ⚠️ CRÍTICO: NUNCA habilitar en producción
# true: Permite acceso a /api/debug-* endpoints
# false o sin definir: Bloquea todos los endpoints debug
ENABLE_DEBUG_ENDPOINTS=true

# MercadoPago
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your_mp_public_key
MERCADOPAGO_ACCESS_TOKEN=your_mp_access_token

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id

# Email (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASSWORD=your_password
