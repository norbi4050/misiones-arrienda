# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
# GUARD: Soft-guard para /comunidad - Evita redirect 307 a /mi-empresa para inmobiliarias
# true (default): Muestra EmptyState amigable sin redirect
# false: Mantiene redirect 307 (legacy mode)
NEXT_PUBLIC_FEATURE_COMMUNITY_SOFT_GUARD=true

# Debug Endpoints (SOLO DESARROLLO)
# ⚠️ CRÍTICO: NUNCA habilitar en producción
# true: Permite acceso a /api/debug-* endpoints
# false o sin definir: Bloquea todos los endpoints debug
ENABLE_DEBUG_ENDPOINTS=true

# MercadoPago
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your_mp_public_key
MERCADOPAGO_ACCESS_TOKEN=your_mp_access_token

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id

# Email (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASSWORD=your_password
